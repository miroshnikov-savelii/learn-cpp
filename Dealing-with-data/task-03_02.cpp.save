#include <iostream>

int converter(int, int, int);

int main()
{
	using namespace std;

	int feet, inches, pound;

	cout << "Enter your height in feet: ";
	cin >> feet;
	cout << "Enter your height in inches: ";
	cin >> inches;
	cout << "Enter yout weight in pound: ";
	cin >> pound;
	cout << "YouĞº BMI is " << converter(feet, inches, pound) << "." << endl;

	return 0;
}

float 

converter(int f, int i, int p)
{
	const int INCH_TO_FEET = 12;
	const int FEET_TO_METER = 0.0254;
	const int POUND_TO_KILO = 2.2;

	float height = f + i / INCH_TO_FEET;
	height = height * FEET_TO_METER;
	float weight = p / POUND_TO_KILO;

	return weight / height*height; 
}
